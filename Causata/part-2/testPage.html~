<html>
<head>
<title>Radical Design UI Test Implementation</title>
<script type="text/javascript">
function highlightRow(id,row){
	var rowTo = document.getElementById(row);	
	if(document.getElementById(id).checked) {
		rowTo.style.backgroundColor = '#6c6c6c';	
	}
	else {
		rowTo.style.backgroundColor = '#ffffff';	
	}
}

function rowClick(row) {
	var rowTo = document.getElementById(row);	
	if(rowTo.className == "grayDivRow") {
		rowTo.className = "varDivRow";	
	}
	else {
		rowTo.className = "grayDivRow";	
	}
}

</script>
<style type="text/css">
#bar {
	height: 10px;
	bottom:5px;
}

div.varDivRow {
	background-color: #ffffff;
}

tr.varTRow {
	width: 100%;
	
	color: #6ec1b0;
}

div.grayDivRow {
	width:100%;
	background-color: #6c6c6c;
	color: #6ec1b0;
}

td.number {
	width: 20px;
	text-align: right;
}
</style>
</head>
